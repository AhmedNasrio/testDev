{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}

<style>
  #shopify-section-{{ section.id }} {
    background-color: rgb(243, 243, 243);
    z-index: 1;
    position: relative;
  }
</style>

<footer class="footer color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  {%- liquid
    assign has_social_icons = true
    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
      assign has_social_icons = false
    endif

    assign brand_empty = true
    if settings.brand_image != blank or settings.brand_description != blank
      assign brand_empty = false
    endif

    if section.blocks.size == 1 and section.blocks[0].type == 'brand_information'
      assign brand_block = section.blocks[0]
      if brand_block.settings.logo_image != blank or brand_block.settings.headline != blank or brand_block.settings.description != blank or brand_block.settings.show_newsletter or brand_block.settings.show_social and has_social_icons
        assign brand_empty = false
      endif
    endif

    if section.blocks.size == 1 and section.blocks[0].type == 'brand_information' and brand_empty and has_social_icons == false
      assign only_empty_brand = true
    else
      assign only_empty_brand = false
    endif
  -%}
  {%- if section.blocks.size > 0 or section.settings.show_social and has_social_icons == true -%}
    {%- unless only_empty_brand -%}
      <div class="footer__content-top page-width">
        <div class="footer__blocks-wrapper">
          {%- for block in section.blocks -%}
            <div class="footer-block grid__item" {{ block.shopify_attributes }}>
              {%- case block.type -%}
                {%- when 'text' -%}
                  <h2 class="footer-block__heading">{{ block.settings.heading }}</h2>
                  <div class="footer-block__details-content">{{ block.settings.subtext }}</div>
                {%- when 'link_list' -%}
                  {%- if block.settings.menu != blank -%}
                    <h2 class="footer-block__heading">{{ block.settings.heading }}</h2>
                    <ul class="footer-block__details-content">
                      {%- for link in block.settings.menu.links -%}
                        <li>
                          <a
                            href="{{ link.url }}"
                            class="list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
                          >
                            {{- link.title | escape -}}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                {%- when 'social_icons' -%}
                  <h2 class="footer-block__heading">Follow Us</h2>
                  <div class="footer-block__details-content footer-block-social-icons">
                    {%- render 'component-social-icons', class: 'footer__list-social' -%}
                  </div>
                {%- when 'brand_information' -%}
                  <div class="footer-block__brand-info" {{ block.shopify_attributes }}>
                    {%- liquid
                      assign brand_logo = block.settings.logo_image | default: settings.brand_image
                      assign brand_description = block.settings.description | default: settings.brand_description
                    -%}
                    {%- if brand_logo != blank -%}
                      <div class="footer-block__brand-logo">
                        {{
                          brand_logo
                          | image_url: width: 430
                          | image_tag:
                            loading: 'lazy',
                            widths: '100, 150, 215, 300, 430',
                            height: 50,
                            width: 215,
                            sizes: '215px'
                        }}
                      </div>
                    {%- endif -%}
                    {%- if brand_description != blank -%}
                      <div class="footer-block__brand-description">{{ brand_description }}</div>
                    {%- endif -%}
                    {%- if block.settings.show_newsletter -%}
                      <div class="footer-block__brand-newsletter">
                        {%- form 'customer', class: 'footer-brand-newsletter-form' -%}
                          <input type="hidden" name="contact[tags]" value="newsletter">
                          <div class="footer-brand-newsletter__input-wrapper">
                            <input
                              type="email"
                              name="contact[email]"
                              class="footer-brand-newsletter__input"
                              value="{{ form.email }}"
                              autocomplete="email"
                              placeholder="{{ block.settings.newsletter_placeholder | default: 'Enter your email' }}"
                              aria-label="{{ block.settings.newsletter_placeholder | default: 'Enter your email' }}"
                              required
                            >
                            <button type="submit" class="footer-brand-newsletter__button" name="commit">
                              {{ block.settings.newsletter_button_text | default: 'Subscribe' }}
                            </button>
                          </div>
                          {%- if form.posted_successfully? -%}
                            <p class="footer-brand-newsletter__message form__message" tabindex="-1">
                              {{ 'newsletter.success' | t }}
                            </p>
                          {%- endif -%}
                          {%- if form.errors -%}
                            <p class="footer-brand-newsletter__message form__message form__message--error" tabindex="-1">
                              {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
                            </p>
                          {%- endif -%}
                        {%- endform -%}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.show_social -%}
                      <div class="footer-block__brand-social">
                        <ul class="list-unstyled list-social footer__list-social" role="list">
