{% comment %} /sections/shop-by-category.liquid {% endcomment %}

{{ 'section-shop-by-category.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #shopify-section-{{ section.id }} .shop-by-category {
    background-color: {{ section.settings.background_color | default: '#DF283A' }};
  }
{%- endstyle -%}

{%- liquid
  assign image = section.settings.image
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_text = section.settings.button_text
  assign button_url = section.settings.button_url
-%}

<div class="shop-by-category color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="shop-by-category__container">
      <div class="shop-by-category__image-wrapper {% if image == blank %}blank{% endif %}">
        {%- if image != blank -%}
          <img
            srcset="
              {%- if image.width >= 300 -%}{{ image | image_url: width: 300 }} 300w,{%- endif -%}
              {%- if image.width >= 600 -%}{{ image | image_url: width: 600 }} 600w,{%- endif -%}
              {%- if image.width >= 900 -%}{{ image | image_url: width: 900 }} 900w,{%- endif -%}
              {{ image | image_url }} {{ image.width }}w
            "
            src="{{ image | image_url: width: 600 }}"
            sizes="(min-width: 750px) 50vw, 100vw"
            alt="{{ image.alt | escape }}"
            loading="lazy"
            width="{{ image.width }}"
            height="{{ image.height }}"
            class="shop-by-category__featured-image"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
      <div class="shop-by-category__content">
        {%- if heading != blank -%}
          <h3 class="shop-by-category__title">{{ heading | escape }}</h3>
        {%- endif -%}
        {%- if subheading != blank -%}
          <p class="shop-by-category__subheading">{{ subheading | escape }}</p>
        {%- endif -%}
        {%- if button_text != blank and button_url != blank -%}
          <a href="{{ button_url }}" class="shop-by-category__button">
            {{ button_text | escape }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Shop By Category",
  "tag": "section",
  "class": "shop-by-category",
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#DF283A"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Spacing Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Shop By Category"
    }
  ]
}
{% endschema %}
