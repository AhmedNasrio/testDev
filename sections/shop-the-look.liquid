          "id": "hotspot_1_enabled",
          "label": "Enable Hotspot 1",
          "default": false
        },
        {
          "type": "product",
          "id": "hotspot_1_product",
          "label": "Product"
        },
        {
          "type": "range",
          "id": "hotspot_1_horizontal",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Horizontal Position",
          "default": 30
        },
        {
          "type": "range",
          "id": "hotspot_1_vertical",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Vertical Position",
          "default": 30
        },
        {
          "type": "header",
          "content": "Hotspot 2"
        },
        {
          "type": "checkbox",
          "id": "hotspot_2_enabled",
          "label": "Enable Hotspot 2",
          "default": false
        },
        {
          "type": "product",
          "id": "hotspot_2_product",
          "label": "Product"
        },
        {
          "type": "range",
          "id": "hotspot_2_horizontal",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Horizontal Position",
          "default": 50
        },
        {
          "type": "range",
          "id": "hotspot_2_vertical",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
          "label": "Vertical Position",
          "default": 50
        },
        {
          "type": "header",
          "content": "Hotspot 3"
        },
        {
          "type": "checkbox",
          "id": "hotspot_3_enabled",
          "label": "Enable Hotspot 3",
          "default": false
        },
        {
          "type": "product",
          "id": "hotspot_3_product",
          "label": "Product"
        },
        {
          "type": "range",
          "id": "hotspot_3_horizontal",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%",
